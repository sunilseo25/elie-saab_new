{%- liquid
	assign overlay_color = block.settings.overlay_color
	assign overlay_opacity = block.settings.overlay_opacity
-%}
<div class="gallery__item" {{ block.shopify_attributes }} style="--overlay-color-rgb: {{ overlay_color.rgb | replace: ' ' , ',' }}; --overlay-opacity: {{ overlay_opacity | divided_by: 100.0 }}">
	{% if block.settings.video == blank %}
  <figure class="aspect-ratio">
		{%- if block.settings.image -%}
			{%- liquid
				assign sizes = block.settings.image.width | append: 'x' | append: block.settings.image.height
			-%}
			{%- render 'responsive-image', image: block.settings.image, sizes: sizes -%}

       
 
		{%- else -%}
			{{ 'image' | placeholder_svg_tag: 'placeholder_svg_tag' }}
		{%- endif -%}
		<div class="gallery__item-content content-{{ block.settings.content_position }} text-{{ block.settings.text_alignment }}">
			<div>
				{% if block.settings.title != blank %}
					<h4>{{ block.settings.title }}</h4>
				{% endif %}
				{% if block.settings.text != blank %}
					<p>{{ block.settings.text }}</p>
				{% endif %}
				{% if block.settings.link_label != blank %}
					{% liquid
						assign button_class = 'button white'
						if block.settings.use_text_button
							assign button_class = 'text-button white'
						endif
					-%}
					<a class="{{ button_class }}"{% if block.settings.link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.link }}"{% endif %}><span>{{ block.settings.link_label }}</span></a>
				{% endif %}
				{% if block.settings.block_link != blank %}
					<a href="{{ block.settings.block_link }}" class="gallery__item-content-link" target="_blank"></a>
				{% endif %}
			</div>
		</div>
	</figure>
      {% else %}
   {% assign sizes = '1600x' %}
			<div class="video-section__container product-video-permotion video-aspect--16-9">
              {% assign meta_video = collection.metafields.custom.promotion_video.value %}
              {% if meta_video != blank %}
	{{ meta_video | video_tag: autoplay: true, loop: true, controls: false, muted: true,image_size: sizes, playsinline: true }}
                {% else %}
        	{{ block.settings.video  | video_tag: loop: true, controls: false, muted: true,image_size: sizes, playsinline: true | replace: 'preload="metadata"' , 'class="lazyvideo" preload="none"' | replace: 'poster' , 'data-poster'  }}
{% endif %}
              <span class="media__poster-button " style="display:none"><svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" class="icon icon-play" fill="none" viewBox="0 0 10 14">
  <path fill-rule="evenodd" clip-rule="evenodd" d="M1.48177 0.814643C0.81532 0.448245 0 0.930414 0 1.69094V12.2081C0 12.991 0.858787 13.4702 1.52503 13.0592L10.5398 7.49813C11.1918 7.09588 11.1679 6.13985 10.4965 5.77075L1.48177 0.814643Z" fill="currentColor"></path>
</svg>
</span>
            </div>

      
  {% endif %}
</div>

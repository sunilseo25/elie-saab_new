    });
  });

function toggleDropdown(element) {
  let dropdown = element.closest(".size-custom-dropdown");
  let dropdownList = dropdown.querySelector(".size-dropdown-list");
  let arrow = dropdown.querySelector(".select-arrow");

  if (!dropdownList) return;
  $(arrow).toggleClass("rotate");
  $(dropdownList).toggleClass("_active");
}

function selectOption(element, value, id) {
  let dropdown = element.closest(".size-custom-dropdown");
  let btn = dropdown.querySelector(".size-dropdown-btn");
  let dropdownList = dropdown.querySelector(".size-dropdown-list");

  if (!element || !dropdown || !btn) {
    console.error("Error: Dropdown element missing!");
    return;
  }

  let allOptions = dropdown.querySelectorAll(".size-dropdown-list li");
  allOptions.forEach(option => option.classList.remove("selected"));
  btn.innerText = value;
  element.classList.add("selected");
  $(dropdownList).toggleClass("_active");
  dropdown.querySelector(".select-arrow").classList.remove("rotate");
}
$("body").on(".size-dropdown-list li", function(e) {
  if (!$(e.target).closest(".size-custom-dropdown").length) {
    $(".size-dropdown-list").removeClass("_active");
    $(".select-arrow").removeClass("rotate");
  }
});
</script>


      <div class="side-panel-header">
        <side-panel-close class="side-panel-close">{%- render 'svg-icons' with 'close' -%}</side-panel-close>
        <ul class="nav nav-tabs cart_drawer_tab">
          <li>
            <h4 class="nav-link" data-bs-toggle="pill" data-bs-target="#search">{{ 'sections.header.search' | t }}</h4>
          </li>
          <li>
            <h4 class="nav-link" data-bs-toggle="pill" data-bs-target="#wishlist">
              <button class="st-wishlist-details-button" aria-label="wishlist" data-type="manually"></button>

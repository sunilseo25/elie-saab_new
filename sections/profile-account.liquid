                  </div>
                </div>
                <div class="field">
                  <div class="fields mobile-col col-2-box">
                    <div class="field">
                      <input
                        type="text"
                        id="AddressCity_{{ form.id }}"
                        name="address[city]"
                        value="{{ form.city }}"
                        autocomplete="address-level2"
                        placeholder="{{ 'customer.addresses.city' | t }}"
                        class="full"
                      >
                    </div>
                    <div class="field custom_select_option">
                      {% comment %}
                      <input
                        type="text"
                        id="AddressCountry_{{ form.id }}"
                        name="address[country]"
                        value="{{ form.country }}"
                        autocapitalize="characters"
                        autocomplete="country"
                        placeholder="Country "
                        class="full"
                      >
{% endcomment %}
                                   <select
                    id="AddressCountry_{{ form.id }}"
                    name="address[country]"
                    data-address-country-select
                    data-default="{{ form.country }}"
                    data-form-id="{{ form.id }}"
                    value="{{ form.country  }}"
                    autocomplete="country"
                  >
                    {{ all_country_option_tags }}
                  </select>
                        <svg width="8" height="6" viewBox="0 0 8 6" fill="none" xmlns="http://www.w3.org/2000/svg"> <path d="M6.75 1.5L3.75 4.5L0.75 1.5" stroke="var(--color-body)" stroke-width="1.1" stroke-linecap="round" stroke-linejoin="round"></path></svg>
                  
                    </div>

                    
                  </div>
                </div>
              </div>
              <div class="field addres-submit">
                <button class="button "><span>Save</span></button>
              </div>
            {%- endform -%}
          </div>
        </div>
        <div class="bill-address">
          <div class="space-container">
            <p class="title-head">Billing Address</p>
            <div class="checkbox-wrapper">
              <div class="box-check">
                <input type="radio" id="checkbox1" name="checkbox-group" checked>
                <label for="checkbox1">
                  <span class="check-box"></span>

                  <span>Same as Shipping Address </span>
                </label>
              </div>
              <div class="box-check">
                <input type="radio" id="checkbox2" name="checkbox-group" >
                <label for="checkbox2" class="billing-checkbox">
                  <span class="check-box"></span>

                  <span>Use a different billing address </span>
                </label>
              </div>
            </div>
<script>
document.addEventListener("DOMContentLoaded", function() {
  const wrapper = document.querySelector(".checkbox-wrapper");
  const billingAddress = document.getElementById("address-billing");

  if (!wrapper || !billingAddress) {
    console.error("Required elements not found!");
    return;
  }

  function handleClick(e) {
    // Check if click was on a label or radio button
    if (e.target.matches('input[type="radio"], label')) {
      setTimeout(() => {
        billingAddress.classList.toggle("active", 
          document.getElementById("checkbox2").checked
        );
      }, 10);
    }
  }

  wrapper.addEventListener("click", handleClick);
  
  // Initialize
  billingAddress.classList.toggle("active", 
    document.getElementById("checkbox2").checked
  );
});
</script>


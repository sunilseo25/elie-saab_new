    <div id="recover" class="box-form">
   <div class="password-form">
             {% form 'reset_customer_password' %}
			
					<p class="title-head">Change your password</p>
					{% if form.errors %}
					<div class="form-notification error">
						{% render 'svg-icons' with 'thb-error' %} {{ form.errors | default_errors }}
					</div>
					{% endif %}
          <div class="field">
            <input type="password" value="" id="password" name="customer[password]" class="full" size="16" placeholder="{{ 'customer.reset_password.password' | t }}" />

          </div>
          <div class="field">
            <input type="password" value="" id="password_confirmation" name="customer[password_confirmation]" class="full" size="16" placeholder="{{ 'customer.reset_password.password_confirm' | t }}" />
	       
          </div>
          <div class="field">
            <button type="submit" class="button"><span>Save</span></button>
          </div>
        {% endform %}
   </div>
    </div>
    <div class="profile-wrap-box">
    <div class=" border-bottom space-around ">
      <div class="space-container profile-box ">
        <p class="title-head">Login</p>
        <div class="list-contain">
          <span class="title-light">{{ customer.email }}</span>
          <span>
            <a href="javascript:void(0)" class="link link-underline" onclick="changepassword();">Change password</a>
          </span>
        </div>
      </div>
    </div>

    <div class="information-wrapper space-around border-bottom">
      <div class="space-container">
        <p class="title-head">Your Information</p>
        <div id="edit-information"  class="box-form">
          <div class="edit-formbox form-box">
            {%- form 'customer_address', customer.default_address, aria-labelledBy: 'AddressNewHeading' -%}
              <div class="fields">
                <div class="field">
                  <input
                    type="text"
                    id="AddressFirstNameNew"
                    name="address[first_name]"
                    value="{{ form.first_name }}"
                    autocomplete="given-name"
                    placeholder="{{ 'customer.addresses.first_name' | t }}"
                    class="full"
                  >
                </div>
                <div class="field">
                  <input
                    type="text"
                    id="AddressLastNameNew"
                    name="address[last_name]"
                    value="{{ form.last_name }}"
                    autocomplete="family-name"
                    placeholder="{{ 'customer.addresses.last_name' | t }}"
                    class="full"
                  >
                </div>
              </div>

              <div class="fields">
                <div class="field">
                  <input
                    type="text"
                    id="AddressEmailNew"
                    name="address[email]"
                    value="{{ customer.email }}"
                    autocomplete="family-name"
                    placeholder="Email Address "
                    class="full"
                    disabled
                  >
                </div>
                <div class="field">
                  <input
                    type="tel"
                    id="AddressPhoneNew"
                    name="address[phone]"
                    value="{{ form.phone }}"
                    autocomplete="tel"
                    placeholder="Phone Number"
                    class="full"
                  >
                </div>
              </div>
              <div class="field addres-submit">
                <button class="button "><span>Save</span></button>
              </div>
            {%- endform -%}
          </div>
        </div>
        <div class="inbox-inline">
          <div class="flex-btw">
            <div class="wrap-profile ">
              <p class="title-light">{{ customer.first_name }}</p>
              <p class="title-light">{{ customer.email }}</p>
              {% if customer.phone != blank %}
                <p class="title-light">{{ customer.phone }}</p>
              {% endif %}
            </div>

            <div class="box-link">
              <a href="javascript:void(0);" class="link link-underline" onclick="openInfo();">Edit</a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="addres-info space-around">
      <div class="address-wrapper-box box-form" id="change-address">
        <div class="space-container">
          <div class="address-wrapper form-box" id="shippingAddress">

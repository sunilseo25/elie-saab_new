{{ 'login-register.css' | asset_url | stylesheet_tag }}
{%- liquid
	assign section_image = section.settings.section_image
-%}
{%- if section_image -%}
	<div class="thb-login-page-wrapper">
		{%- liquid
			assign master_width = section_image.src.width | append: 'x' | append: section_image.src.height

			render 'responsive-image', image: section_image, sizes: master_width
		 -%}
{%- endif -%}
<div class="row main-register-login">
	<div class="small-12 columns">
    <div class="thb-form-container">
      <div class="thb-register-form">
        {% form 'create_customer', novalidate: 'novalidate' %}
					<h6>{{ 'customer.login_page.create_account' | t }}</h6>
					<p>{{ 'customer.login_page.create_account_description' | t }}</p>
					{% if form.errors %}
					<div class="form-notification error">
						{% render 'svg-icons' with 'thb-error' %} {{ form.errors | default_errors }}
					</div>
					{% endif %}
					<div class="fields">
            <div class="field">
              <input type="text" name="customer[first_name]" class="full" value="{% if form.first_name %}{{ form.first_name }}{% endif %}" placeholder="{{ 'customer.login_page.first_name' | t }}" />
	          {% comment %}
              <label for="first_name">{{ 'customer.login_page.first_name' | t }}</label>
          {% endcomment %}
            </div>
            <div class="field">
              <input type="text" name="customer[last_name]" class="full" value="{% if form.last_name %}{{ form.last_name }}{% endif %}" placeholder="{{ 'customer.login_page.last_name' | t }}" />
	          {% comment %} 
              <label for="last_name">{{ 'customer.login_page.last_name' | t }}</label>
          {% endcomment %}
            </div>
					</div>
          <div class="field">
            <input type="email" name="customer[email]" class="full {% if form.errors contains 'email' %}invalid{% endif %}" value="" placeholder="{{ 'customer.login_page.email' | t }}" />
          {% comment %}
            <label for="email">{{ 'customer.login_page.email' | t }}</label>
          {% endcomment %}
          </div>
          <div class="field">
            <input type="password" name="customer[password]" class="full" value="" placeholder="{{ 'customer.login_page.password' | t }}" />
                    <span class="view_password">
                  <img
                    width="14"
                    height="16"
                    src="//elie-saab-switzerland.myshopify.com/cdn/shop/t/29/assets/view.png?v=152197018190084307821742315570"
                    role="presentation"
                    data-ac-alt-type="image"
                  >
                </span>
            {% comment %}
            <label for="password">{{ 'customer.login_page.password' | t }}</label>
          {% endcomment %}
          </div>
            <div class="field">
                <div class="field_checkbox">
                  <label for="newsletter_subscribe"
                    >I would like to be informed and inspired by news regarding ELIE SAAB
                    <input type="checkbox" id="newsletter_subscribe" name="customer[accepts_marketing]" value="1">
                    <span class="radio-checkbox"></span> </label
                  ><br>
                </div>
              </div>
              <div class="field">
                <div class="field_checkbox">
                  <label for="accept_policy"
                    >By clicking on "Create an account" you confirm you have read the Privacy Policy and consent to the
                    processing of your personal data by ELIE SAAB
                    <input type="checkbox" id="accept_policy" name="newsletter_subscribe" required checked>
                    <span class="radio-checkbox"></span> </label
                  ><br>
                </div>
              </div>
          <button type="submit" class="button full"><span>{{ 'customer.login_page.submit_register' | t }}</span></button>
        {% endform %}
				<div class="switch-login-section">
					{{ 'customer.login_page.already_have_an_account' | t }} <a href="{{ routes.account_login_url }}" class="text-button">{{ 'customer.login_page.login' | t }}</a>
				</div>
      </div>
    </div>
  </div>
</div>
{%- if section_image -%}
	</div>
{%- endif -%}
{% schema %}
{
  "name": "Register",
  "tag": "section",
  "class": "section-customer-register",
	"settings": [
		{
			"type": "image_picker",
			"id": "section_image",
			"label": "Main image"
		}
	]
}
{% endschema %}
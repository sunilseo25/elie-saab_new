{{- 'gallery.css' | asset_url | stylesheet_tag -}}

{%- liquid
	assign section_heading = section.settings.heading
	assign section_heading_left = section.settings.heading_left
	assign section_description = section.settings.description
   	assign full_width = section.settings.full_width
    assign max_container = section.settings.max-container
    assign display_type = section.settings.display_type
    assign show_progress_bar = section.settings.show_progress_bar
    
	assign columns_desktop = section.settings.columns_desktop
	assign content_position = section.settings.content_position
	assign text_alignment = section.settings.text_alignment
	assign image_ratio = section.settings.image_ratio
	assign heading_size = section.settings.heading_size
	assign overlay_color = section.settings.overlay_color
	assign overlay_opacity = section.settings.overlay_opacity
	assign disable_top_spacing = section.settings.disable_top_spacing
	assign disable_bottom_spacing = section.settings.disable_bottom_spacing

 	assign columns_class = 'small-6 medium-6 large-4'
	case columns_desktop
		when 2
			assign columns_class = 'small-6 medium-6'
		when 3
			assign columns_class = 'small-6 medium-4'
		when 4
			assign columns_class = 'small-6 medium-6 large-3'
		when 5
			assign columns_class = 'small-6 medium-4 large-1/5'
	endcase

	if display_type == 'carousel'
		assign element = 'slide-show'
	else
		assign element = 'div'
	endif
-%}
<style>
  .suggestion-{{ section.id }} .gallery__item-content{
    padding:15px;
  }
  .suggestion-{{ section.id }} .gallery__item-content h4{
    font-weight: var(--font-body-bold-weight, 600);
  }
  .suggestion-{{ section.id }} .products.row {
    padding: 0;
  }
  .suggestion-{{ section.id }} .carousel__slide figure:after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 11;
    background: rgba(var(--overlay-color-rgb), var(--overlay-opacity));
  }

  @media screen and (max-width:749px){
      .suggestion-{{ section.id }} .carousel__slide {
        max-width:80%;
      }
         .suggestion-{{ section.id }}  .product-featured-image-link{
      padding-bottom:80% !important;
    }
      .template-search  .suggestion-{{ section.id }} .section-header{
    padding:0 30px;
  }
      .suggestion-{{ section.id }} .row,    .suggestion-{{ section.id }} .row > .columns{
        padding:0;
      }
    .suggestion-{{ section.id }}  .products.carousel .carousel__slide{
      padding:0 7px;
    }
  }
</style>

<div class="suggestion-{{ section.id }} section-spacing{% if disable_top_spacing %} section-spacing--disable-top{% endif %}{% if disable_bottom_spacing %} section-spacing--disable-bottom{% endif %}">
  <div class="row{% if full_width %} full-width-row{% endif %}" {% if max_container != blank %}style="max-width: {{ max_container }}px"{% endif %}>
    <div class="small-12 columns">
      {% render 'section-header', section_heading: section_heading, section_description: section_description, section_heading_left: section_heading_left, md_heading_left:true %}
      <{{ element }} class="products row text-{{ text_alignment }} {{ display_type }}" style="--overlay-color-rgb: {{ overlay_color.rgb | replace: ' ' , ',' }}; --overlay-opacity: {{ overlay_opacity | divided_by: 100.0 }}">
        {%- for block in section.blocks -%}
          <div class="{{ columns_class }} columns {% if display_type == 'carousel' %}carousel__slide{% endif %}" {{ block.shopify_attributes }}>
            {%- liquid
              assign ratio = 1
              if image_ratio == 'adapt' and block.settings.image
                assign ratio = block.settings.image.aspect_ratio
              endif
            -%}
            <div class="product-card">
              <a href="{{ block.settings.block_link }}" class="link">
              <figure class="product-featured-image">
                {%- if block.settings.image -%}
                  {%- liquid assign sizes = '375x0,750x0' -%}
                  <div class="product-featured-image-link aspect-ratio aspect-ratio--{{ image_ratio }}" style="--padding-bottom: {% if image_ratio == 'landscape' and block.settings.image %}{{ 1 | divided_by: ratio | times: 50 }}%{% else %}{{ 1 | divided_by: ratio | times: 100 }}%{% endif %};">
                    {%- render 'responsive-image', image: block.settings.image, sizes: sizes -%}
                  </div>
                {%- else -%}
                  <div class="product-featured-image-link aspect-ratio aspect-ratio--{{ image_ratio }}" style="--padding-bottom: {{ 1 | divided_by: ratio | times: 100 }}%;">
                    {{ 'image' | placeholder_svg_tag: 'placeholder_svg_tag' }}
                  </div>
                {%- endif -%}
                <div class="gallery__item-content content-{{ content_position }}">
                  <div>
                    {% if block.settings.title != blank %}
                      <h4 class="{{ heading_size }}">{{ block.settings.title }}</h4>
                    {% endif %}
                  </div>
                </div>
              </figure>
              </a>
            </div>
          </div>
        {%- endfor -%}
        {%- if display_type == 'carousel' -%}
          {%- if section.blocks.size > columns_desktop -%}
          {%- render 'slideshow-arrows' -%}
          {%- endif -%}
        {%- endif -%}
      </{{ element }}>
      {%- if display_type == 'carousel' and show_progress_bar -%}
        <div class="flickity-progress">
          <div class="flickity-progress--bar"></div>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>


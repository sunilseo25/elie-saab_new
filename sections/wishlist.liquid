            <li>
              <a href="">Bridesmaid dress</a>
            </li>
            <li>
              <a href="">Mother of the Bride dress</a>
            </li>
          </ul>
        </div>
      </div>
      <div class="wishlist_right">
         <h4><a href="">View all the items you loved</a></h4>
        <div class="featured-collection swipe-on-mobile section-spacing section-spacing--disable-top  ">
            <div class="full-width-row">
                     <div class="featured-collection__inner display-type--carousel">
                        <slide-show id="product-grid-{{ section.id }}" class="products row carousel">
                          {% for recommendation in collections["fall-winter-24-25"].products limit: 10 %}
                            <div class="small-12 medium-6 large-3 columns  carousel__slide ">
                              {% render 'product-card', product_card_product: recommendation %}
                            </div>
                          {%- endfor -%} 
                              {%- render 'slideshow-arrows' -%} 
                        </slide-show> 
                      </div> 
            </div>
          </div>
          <ul class="suggested_categories">
             <li>
